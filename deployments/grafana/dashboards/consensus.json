{
  "uid": "kairos-consensus",
  "title": "Kairos Consensus",
  "editable": true,
  "timezone": "browser",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "refresh": "5s",
  "templating": {
    "list": [
      {
        "name": "instance",
        "label": "Validator",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": {
          "query": "label_values(consensus_current_view, instance)",
          "refId": "Prometheus-instance-Variable-Query"
        },
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "refresh": 2,
        "sort": 1,
        "current": {
          "text": "All",
          "value": ".*",
          "selected": true
        }
      }
    ]
  },
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Current View",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "max(consensus_current_view{instance=~\"$instance\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 2,
      "title": "Finalized View",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "min(consensus_finalized_view{instance=~\"$instance\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 3,
      "title": "Views Since Finalization",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "max(consensus_views_since_finalization{instance=~\"$instance\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "min": 0,
          "max": 20
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "id": 4,
      "title": "Blocks Finalized",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 5 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(consensus_blocks_finalized_total{instance=~\"$instance\"}[1m]))",
          "legendFormat": "blocks/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "id": 5,
      "title": "Finalization Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 5 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum by (le) (rate(consensus_finalization_latency_seconds_bucket{instance=~\"$instance\"}[5m])))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(consensus_finalization_latency_seconds_bucket{instance=~\"$instance\"}[5m])))",
          "legendFormat": "p99",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "s"
        },
        "overrides": []
      }
    },
    {
      "id": 6,
      "title": "Nullification Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(consensus_nullifications_total{instance=~\"$instance\"}[1m]))",
          "legendFormat": "nullifications/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "id": 7,
      "title": "Cascade Nullifications",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(consensus_cascade_nullifications_total{instance=~\"$instance\"}[1m]))",
          "legendFormat": "cascade/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "id": 8,
      "title": "Messages by Type",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 23 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (type) (rate(consensus_messages_processed_total{instance=~\"$instance\"}[1m]))",
          "legendFormat": "{{type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 30,
            "stacking": {
              "mode": "normal"
            }
          },
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "id": 9,
      "title": "Message Processing Latency p99",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 23 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(consensus_message_processing_duration_seconds_bucket{instance=~\"$instance\"}[5m])))",
          "legendFormat": "p99",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "s"
        },
        "overrides": []
      }
    },
    {
      "id": 10,
      "title": "Mempool Pool Sizes",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(consensus_mempool_pending_count{instance=~\"$instance\"})",
          "legendFormat": "pending",
          "refId": "A"
        },
        {
          "expr": "sum(consensus_mempool_queued_count{instance=~\"$instance\"})",
          "legendFormat": "queued",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      }
    },
    {
      "id": 11,
      "title": "Transaction Throughput",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(consensus_transactions_received_total{instance=~\"$instance\"}[1m]))",
          "legendFormat": "tx/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "id": 12,
      "title": "Ring Buffer Utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 41 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "max by (channel) (consensus_ring_buffer_utilization{instance=~\"$instance\"})",
          "legendFormat": "{{channel}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "percentunit"
        },
        "overrides": []
      }
    },
    {
      "id": 13,
      "title": "Tick Duration p99",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 41 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(consensus_tick_duration_seconds_bucket{instance=~\"$instance\"}[5m])))",
          "legendFormat": "p99",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "s"
        },
        "overrides": []
      }
    }
  ]
}
